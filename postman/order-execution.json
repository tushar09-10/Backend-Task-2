{
    "info": {
        "name": "Order Execution Engine",
        "description": "API collection for testing the order execution engine",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://order-engine.up.railway.app",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/health",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "health"
                    ]
                }
            }
        },
        {
            "name": "Execute Order - Buy SOL",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"pair\": \"SOL/USDC\",\n  \"side\": \"buy\",\n  \"amount\": 10,\n  \"slippageTolerance\": 0.01\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/orders/execute",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "orders",
                        "execute"
                    ]
                }
            }
        },
        {
            "name": "Execute Order - Sell SOL",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"pair\": \"SOL/USDC\",\n  \"side\": \"sell\",\n  \"amount\": 5,\n  \"slippageTolerance\": 0.02\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/orders/execute",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "orders",
                        "execute"
                    ]
                }
            }
        },
        {
            "name": "Execute Order - ETH",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"pair\": \"ETH/USDC\",\n  \"side\": \"buy\",\n  \"amount\": 1,\n  \"slippageTolerance\": 0.01\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/orders/execute",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "orders",
                        "execute"
                    ]
                }
            }
        },
        {
            "name": "Get Order by ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/orders/:orderId",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "orders",
                        ":orderId"
                    ],
                    "variable": [
                        {
                            "key": "orderId",
                            "value": "your-order-id-here"
                        }
                    ]
                }
            }
        },
        {
            "name": "List Orders",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/orders?limit=20",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "orders"
                    ],
                    "query": [
                        {
                            "key": "limit",
                            "value": "20"
                        }
                    ]
                }
            }
        }
    ]
}